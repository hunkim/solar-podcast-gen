<svg width="192" height="192" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background circle with gradient -->
  <defs>
    <linearGradient id="bg-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3B82F6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1D4ED8;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="mic-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#F59E0B;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#D97706;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <circle cx="32" cy="32" r="30" fill="url(#bg-gradient)" stroke="#1E40AF" stroke-width="2"/>
  
  <!-- Microphone body -->
  <rect x="26" y="16" width="12" height="20" rx="6" fill="url(#mic-gradient)" stroke="#92400E" stroke-width="1"/>
  
  <!-- Microphone grille lines -->
  <line x1="28" y1="20" x2="36" y2="20" stroke="#92400E" stroke-width="0.5"/>
  <line x1="28" y1="23" x2="36" y2="23" stroke="#92400E" stroke-width="0.5"/>
  <line x1="28" y1="26" x2="36" y2="26" stroke="#92400E" stroke-width="0.5"/>
  <line x1="28" y1="29" x2="36" y2="29" stroke="#92400E" stroke-width="0.5"/>
  <line x1="28" y1="32" x2="36" y2="32" stroke="#92400E" stroke-width="0.5"/>
  
  <!-- Microphone stand -->
  <line x1="32" y1="36" x2="32" y2="44" stroke="#6B7280" stroke-width="2"/>
  <rect x="28" y="44" width="8" height="2" rx="1" fill="#6B7280"/>
  
  <!-- Video/generation element - play button with sparkles -->
  <circle cx="44" cy="20" r="8" fill="#10B981" stroke="#047857" stroke-width="1"/>
  <polygon points="41,17 41,23 47,20" fill="white"/>
  
  <!-- Sparkles for "generation" effect -->
  <circle cx="48" cy="12" r="1.5" fill="#F59E0B"/>
  <circle cx="52" cy="16" r="1" fill="#F59E0B"/>
  <circle cx="50" cy="26" r="1" fill="#F59E0B"/>
  
  <!-- Sound waves -->
  <path d="M 14 24 Q 10 28 10 32 Q 10 36 14 40" stroke="white" stroke-width="2" fill="none" opacity="0.8"/>
  <path d="M 18 26 Q 16 28 16 32 Q 16 34 18 38" stroke="white" stroke-width="1.5" fill="none" opacity="0.6"/>
  
  <path d="M 50 24 Q 54 28 54 32 Q 54 36 50 40" stroke="white" stroke-width="2" fill="none" opacity="0.8"/>
  <path d="M 46 26 Q 48 28 48 32 Q 48 34 46 38" stroke="white" stroke-width="1.5" fill="none" opacity="0.6"/>
</svg> 